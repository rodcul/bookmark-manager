<div id='new-link'>
  <form class="form-inline" action = 'links' method = 'post'>
    <div class="form-group">
      <label for="URL">URL:</label>
      <input type="text" class="form-control" placeholder="http://www.example.com" name = "url">
    </div>
    <div class="form-group">
      <label for="exampleInputEmail2">Title:</label>
      <input type="text" class="form-control" name="title" placeholder="Example Website">
    </div>
    <div class="form-group">
      <label for="exampleInputEmail2">Tags:</label>
      <input type="text" class="form-control" name="tags" placeholder="search">
    </div>
    <button type="submit" class="btn btn-default">Add link</button>
  </form>
</div>
<table class="table table-striped">
  <% @links.each do |link| %>
  <tr>

    <td>
        <a href='<%= link.url %>'><%= link.title %></a>

    </td>

  </tr>
  <% end %>
</table>
